{
  "name": "MIW Travel Management System",
  "description": "Complete travel management system for Haji and Umroh packages with customer registration, document management, and admin dashboard.",
  "keywords": ["php", "travel", "haji", "umroh", "management"],
  "website": "https://miw-travel-app.herokuapp.com",
  "repository": "https://github.com/takaruma7/miw",
  "logo": "https://miw-travel-app.herokuapp.com/miw_logo.png",
  "success_url": "/",
  "env": {
    "DATABASE_URL": {
      "description": "PostgreSQL database URL provided by Heroku",
      "required": true
    },
    "SMTP_HOST": {
      "description": "SMTP server hostname for email sending",
      "value": "smtp.gmail.com",
      "required": false
    },
    "SMTP_USERNAME": {
      "description": "SMTP username (email address)",
      "required": false
    },
    "SMTP_PASSWORD": {
      "description": "SMTP password or app password",
      "required": false
    },
    "SMTP_PORT": {
      "description": "SMTP port number",
      "value": "587",
      "required": false
    },
    "SMTP_ENCRYPTION": {
      "description": "SMTP encryption type (tls/ssl)",
      "value": "tls",
      "required": false
    },
    "APP_ENV": {
      "description": "Application environment",
      "value": "production",
      "required": false
    },
    "MAX_EXECUTION_TIME": {
      "description": "Maximum PHP execution time in seconds",
      "value": "300",
      "required": false
    },
    "MAX_FILE_SIZE": {
      "description": "Maximum file upload size",
      "value": "10M",
      "required": false
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:essential-0",
      "as": "DATABASE"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/php"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "stack": "heroku-22"
}